@{
}

@model EquityCalculator.Web.Models.Entities.UserInput

<div class="text-center">
    <h1 class="display-4">Equity Calculator</h1>
</div>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Selling Price: </label>
        <input type="text" class="form-control" asp-for="sellingPrice" />
    </div>

    <div class="mt-3">
        <label class="form-label">Reservation Date: </label>
        <input type="date" class="form-control" asp-for="dateTime" />
    </div>

    <div class="mt-3">
        <label class="form-label">Terms: </label>
        <input type="text" class="form-control" asp-for="equityTerm" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Check</button>
    </div>
</form>